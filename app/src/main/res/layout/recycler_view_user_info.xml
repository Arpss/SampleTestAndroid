<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    card_view:cardBackgroundColor="#4472c4"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    android:id="@+id/card_view_user_info">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/card_view_user_info_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/card_view_user_info_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:layout_gravity="left"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/card_view_user_info_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:layout_gravity="left"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/card_view_user_info_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:layout_gravity="left"
            android:textSize="20dp"/>
        
    </LinearLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>